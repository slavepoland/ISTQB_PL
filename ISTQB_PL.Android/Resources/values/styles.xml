<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
	<!--<item name="colorPrimary">#2196F3</item>-->
    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <!--<item name="colorAccent">#FF4081</item>-->
  </style>
	 <!--Styl bazowy dla całej aplikacji--> 
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		 <!--Dodaj atrybut textColor dla ustalenia domyślnego koloru czcionki--> 
		<!--<item name="android:textColor">@color/defaultFontColorDarkTheme</item>-->
	</style>


	<!-- Styl dla trybu jasnego -->
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		 Domyślny kolor czcionki dla trybu jasnego 
		<item name="android:textColor">@android:color/black</item>
		 Domyślny kolor tła dla trybu jasnego 
		<item name="android:windowBackground">@android:color/white</item>
		 Kolor akcentu dla trybu jasnego 
		<item name="colorAccent">@color/colorAccent</item>
		 Inne atrybuty stylu dla trybu jasnego 
	</style>

	<!-- Styl dla trybu ciemnego -->
	<style name="AppTheme.Dark" parent="Theme.AppCompat">
		 Domyślny kolor czcionki dla trybu ciemnego 
		<item name="android:textColor">@android:color/white</item>
		 Domyślny kolor tła dla trybu ciemnego 
		<item name="android:windowBackground">@android:color/black</item>
		 Kolor akcentu dla trybu ciemnego 
		<item name="colorAccent">@color/colorAccent</item>
		 Inne atrybuty stylu dla trybu ciemnego 
	</style>

	<style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
		<item name="colorControlActivated">@color/checked_color_dark_mode</item>
		<item name="colorControlActivated">@color/checked_color_light_mode</item>
	</style>
	
	<!-- Styl dla ActionBar -->
	<!--<style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/defaultFontColor</item>
	</style>-->
</resources>